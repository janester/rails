=form_for @photo, :html => {:multipart => true}, :url => photos_path, :remote => true do |f|
  =f.label :name
  =f.text_field :name, :autofocus => true
  =f.label :file
  =f.file_field :file
  =f.text_field :remote_file_url
  =hidden_field_tag :album_id, @album_id
  =f.submit nil, :class => "button radius success"
  =link_to("Cancel", "#", :"data-clear-photo-form" => true, :class => "button radius alert")