.row
  .small-4.small-offset-2.columns
    =form_for @exercise, :remote => true do |f|
      =f.label :activity
      =f.text_field :activity, :autofocus => true, :placeholder => "crunches"
      =f.label :amount
      =f.number_field :amount, :placeholder => "20"
      =f.label :unit
      =f.text_field :unit, :placeholder => "reps"
      =f.label :completed_on
      =f.text_field :completed_on, :placeholder => "YYYY-MM-DD"
      =f.submit "Add", :class=>"button radius"