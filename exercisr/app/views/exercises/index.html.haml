  .small-4.small-offset-2.columns
    %table#exercises
      %tr
        %td Activity
        %td Amount
        %td Units
        %td Date
      -@exercises.each do |exercise|
        %tr
          %td= exercise.activity
          %td= exercise.amount
          %td= exercise.unit
          %td= exercise.completed_on
    = link_to("New Exercise", new_exercise_path, :remote => true, :class => "button radius alert")
  .small-4.columns
    =select_tag("activities", options_for_select(@unique_exercises.map{|a| [a, a]}), :prompt => "Select an Exercise")
