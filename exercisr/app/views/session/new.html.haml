.row
  .small-12.columns
    %h1 Login to Exercisr
.row
  .small-4.small-centered.columns
    =form_tag '/login' do
      =label_tag 'email'
      =text_field_tag 'email', nil, :autofocus => true, :placeholder => "jane@doe.com"
      =label_tag 'password'
      =password_field_tag 'password'
      =submit_tag 'Login to Exercisr', :class => 'button radius'
