.row
  .small-4.small-centered.columns
    =form_for @user, :remote => true do |f|
      =f.label :email
      =f.text_field :email, :autofocus => true, :placeholder => "jane@doe.com"
      =f.label :password
      =f.password_field :password, :placeholder => "example: abc"
      =f.label :password_confirmation
      =f.password_field :password_confirmation, :placeholder => "example: abc"
      =f.submit "Create Account", :class=>"button radius"a